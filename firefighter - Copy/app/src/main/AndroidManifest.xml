<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.firefighter">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/home"
        android:label="Home App"
        android:roundIcon="@mipmap/home"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.firefighter.Activities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name="com.example.firefighter.Activities.HomeActivity" />
        <activity android:name="com.example.firefighter.Activities.RegisterActivity">

        </activity>
    </application>

</manifest>